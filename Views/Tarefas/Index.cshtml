@Model TarefaViewModel

@{
    ViewData["Title"] = "Task List";
}

<div class="panel panel-default tarefa-panel">
    <div class="panel-heading">@ViewData["Title"]</div>


    <table class="table table-hover">
        <thead>
            <tr>
               <td>&#xd2714</td>
               <td>Tarefa</td>
               <td>Previsao</td>
           </tr>
        </thead>
      @foreach (var item in Model.TarefaItens){
         <tr>
             <td>
                    <input type="checkbox" name="@item.Id" value="true" class="done-checkbox">
              </td>
              <td>@item.Name</td>
               <td>@item.ConclusionDate</td>
            </tr>
     }
    </table>
    <div class="panel-footer add-item-form">
        <form>
            <div id="add-item-error" class = "text-danger"></div>
            <label for="add-item-title"> Include new Task </label>
            <input id="add-item-title">
            <button type="button" id="add-item-button"> Include </button>
        </form>
    </div>
</div>